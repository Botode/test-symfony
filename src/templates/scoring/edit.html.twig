{% extends 'scoring/home.html.twig' %}

{% block title %}
{{ 'page.edit'|trans }}
{% endblock %}

{% block main %}
<div>
    {{ 'form.client.id'|trans({'%id%': client.id}) }}
    / {{ 'form.score.score'|trans({'%score%': client.score is null ? '-' : client.score.score }) }}
</div>
<br>
{{ form_start(form) }}
    {{ form_row(form.firstname, {'label': 'form.client.firstname'}) }}
    {{ form_row(form.lastname, {'label': 'form.client.lastname'}) }}
    {{ form_row(form.phone, {'label': 'form.client.phone.label'}) }}
    {{ form_row(form.email, {'label': 'form.client.email'}) }}
    {{ form_row(form.education, {'label': 'form.client.education'}) }}
    {{ form_row(form.consent, {'label': 'form.client.consent.edit'}) }}
    {{ form_row(form.save, {'label': 'form.save.edit'}) }}
{{ form_end(form) }}
{% endblock %}